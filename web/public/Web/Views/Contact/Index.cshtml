@using SilverLeaf.Public.Web.Services
@inject LocalizationService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("PageTitleContactUs");
}

@model SilverLeaf.Public.Web.Models.ContactUsViewModel

    <h2 class="row justify-content-center text-center">@SharedLocalizer.GetLocalizedHtmlString("LabelContactUs")</h2>
<h4 class="row justify-content-center text-center">@SharedLocalizer.GetLocalizedHtmlString("LabelFormInstructions")</h4>
<hr />

<div class="row justify-content-center text-center">
    <div class="col-md-6 col-md-offset-*">
        <form asp-action="Contact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("LabelName")</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("LabelPhone")</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("LabelEmail")</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("LabelDescription")</label>
                <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("ButtonSubmit")</button>
</div>
        </form>
    </div>
</div>