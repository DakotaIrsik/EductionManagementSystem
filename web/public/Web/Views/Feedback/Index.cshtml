@using SilverLeaf.Public.Web.Services
@inject LocalizationService SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("PageTitleContactUs");
}

@model SilverLeaf.Public.Web.Models.DemoFeedbackViewModel

<h2 class="row justify-content-center text-center">@SharedLocalizer.GetLocalizedHtmlString("LabelDemoFeedback")</h2>
<h4 class="row justify-content-center text-center">@SharedLocalizer.GetLocalizedHtmlString("LabelDemoFeedbackIntro")</h4>
<hr />

<div class="row justify-content-center text-center">
    <div class="col-md-6 col-md-offset-*">
        <form asp-action="Feedback">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("LabelStudentName")</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            @foreach (var item in Model.InformationPoints)
            {
                <div class="form-group">
                    <label>@item.Question</label>
                </div>
                <div class="form-group">
                    <select class="form-control" id="@item.QuestionId" name="@item.QuestionId" , asp-for="@item.Answer" asp-items="@item.Answers"></select>
                </div>
            }

            <div class="form-group">
                <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("WhatCouldWeDoBetter")</label>
                <textarea asp-for="WhatCouldWeDoBetter" rows="5" class="form-control"></textarea>
                <span asp-validation-for="WhatCouldWeDoBetter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">@SharedLocalizer.GetLocalizedHtmlString("WhatDidYourChildLikeBestAboutTheDemo")</label>
                <textarea asp-for="WhatDidYourChildLike" rows="5" class="form-control"></textarea>
                <span asp-validation-for="WhatDidYourChildLike" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("ButtonSubmit")</button>
            </div>
        </form>
    </div>
</div>