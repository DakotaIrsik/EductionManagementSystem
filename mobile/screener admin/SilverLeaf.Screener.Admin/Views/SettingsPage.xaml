<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SilverLeaf.Screener.Admin.Views.SettingsPage"
             Title="{Binding Resources[PageTitleSettings]}"
             BackgroundImageSource="{Binding BackgroundImage}">
    <StackLayout>
        <Label Text="{Binding Resources[Language]}" />
        <Picker ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" />
    </StackLayout>
</ContentPage>